    # dmenu
    dmenu = dmenu -p dunst:

    # Browser for opening urls in context menu
    browser = xdg-open

[shortcuts]
    # Close (all) notifications
    close = mod4+n
    close_all = mod4+ctrl+n

    # Redisplay last message(s)
    history = mod4+grave

    # Context menu
    context = mod4+apostrophe

[urgency_low]
    background = "#32302f"
    foreground = "#ebdbb2"

[urgency_normal]
    background = "#32302f"
    foreground = "#ebdbb2"

[urgency_critical]
    background = "#cc241d"
    foreground = "#ebdbb2"
    frame_color = "#fb4934"
    timeout = 0

