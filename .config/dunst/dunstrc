[global]
    # The geometry, padding and frame of the window
    geometry = "300x3-7+33"
    padding = 6
    horizontal_padding = 6
    frame_width = 2
    frame_color = "#d79921"
    corner_radius = 3

    # Don't remove messages, if the user is idle (no mouse or keyboard input)
    # for longer than idle_threshold seconds.
    idle_threshold = 120

    # Text
    font = Noto Sans Display 9
    markup = full
    format = "<b>%s</b>\n%b"
    word_wrap = true

    # Icons
    icon_position = left
