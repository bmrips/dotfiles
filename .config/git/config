[advice]
    detachedHead = false
    statusHints = false

[alias]
    a  = add
    b  = branch
    co = checkout
    c  = commit
    ca = commit --amend
    cf = commit --fixup
    cp = cherry-pick
    cu = commit --amend --no-edit
    d  = diff
    ds = diff --staged
    dt = difftool
    l  = log
    lg = log --oneline --graph
    lo = log --oneline
    lv = log --format='%C(auto)%h%d %s - %C(blue)%an%C(reset), %C(magenta)%ad%C(reset)'
    ls = ls-files
    mc = diff --name-only --diff-filter=U
    mt = mergetool
    r  = reset
    rb = rebase
    s  = status --short
    sl = shortlog
    sw = switch

[core]
    hooksPath = ~/.config/git/templates/hooks
    pager = diff-so-fancy | less
    whitespace = tabwidth=4

[color "diff"]
    frag = magenta bold
    meta = blue
    whitespace = red reverse

[color "diff-highlight"]
    oldNormal = red
    oldHighlight = red reverse
    newNormal = green
    newHighlight = green reverse

[color "status"]
    nobranch = red bold
    unmerged = blue

[commit]
    gpgSign = true
    template = ~/.config/git/commit_template

[credential]
    helper = cache

[diff]
    algorithm = histogram
    renames = copy
    guitool = kompare

[difftool "nvim"]
    cmd = nvim -d $LOCAL $REMOTE

[fetch]
    prune = true

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[init]
    defaultBranch = main
    templateDir = ~/.config/git/templates

[interactive]
    diffFilter = delta --color-only --diff-so-fancy

[log]
    date = human

[merge]
    ff = only
    tool = nvim
    guitool = kdiff3

[mergetool "nvim"]
    cmd = nvim -d \"$LOCAL\" \"$MERGED\" \"$REMOTE\"
    trustExitCode = false

[pull]
    rebase = true

[push]
    gpgSign = if-asked

[rebase]
    missingCommitsCheck = error

[stash]
    showStat = true

[status]
    showStash = true

[tag]
    gpgSign = true

[user]
    name = Benedikt Rips
    email = benedikt.rips@gmail.com

# Use HTTPS instead of plain Git for Github
[url "https://github.com/"]
    insteadOf = git://github.com/

# vi: ft=gitconfig
