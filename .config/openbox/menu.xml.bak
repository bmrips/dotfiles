<menu id="ob-config" label="Configuration">
	<item label="Obconf">
		<action name="Execute">
			<command>/usr/bin/obconf</command>
		</action>
	</item>
	<item label="menu.xml">
		<action name="Execute">
			<command>/usr/bin/atom ~/.config/openbox/menu.xml</command>
		</action>
	</item>
	<item label="rc.xml">
		<action name="Execute">
			<command>/usr/bin/atom ~/.config/openbox/rc.xml</command>
		</action>
	</item>
	<separator/>
	<item label="Reconfigure">
		<action name="Execute">
			<command>openbox --reconfigure</command>
		</action>
	</item>
	<item label="Restart">
		<action name="Execute">
			<command>openbox --restart</command>
		</action>
	</item>
</menu>

<menu id="sys-exit" label="Exit">
	<item label="Logout">
		<action name="Exit">
			<prompt>yes</prompt>
		</action>
	</item>
	<item label="Suspend">
		<action name="Execute">
			<command>systemctl suspend</command>
		</action>
	</item>
	<item label="Reboot">
		<action name="Execute">
			<prompt>Are you sure you want to reboot?</prompt>
			<command>systemctl reboot</command>
		</action>
	</item>
	<item label="Shutdown">
		<action name="Execute">
			<prompt>Are you sure you want to shutdown?</prompt>
			<command>systemctl poweroff</command>
		</action>
	</item>
</menu>

