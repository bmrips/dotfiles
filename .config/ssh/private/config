# vi: ft=sshconfig

AddKeysToAgent yes

# Arch Linux -----------------------------------------------------------

Host aur.archlinux.org aur
    HostName aur.archlinux.org
    User aur
    IdentityFile ~/.config/ssh/private/aur

# Github ---------------------------------------------------------------

Host github.com github
    HostName github.com
    User git
    IdentityFile ~/.config/ssh/private/github
