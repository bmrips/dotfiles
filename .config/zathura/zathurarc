# Window
set window-icon "/usr/share/icons/hicolor/16x16/apps/org.pwmt.zathura.png"
set window-title-home-tilde true

# Foreground and background
set default-bg "#7c6f64"
set default-fg "ebdbb2"

# Font
set font "Noto Sans Display Regular 10"

# Hide the status bar
set guioptions ""

# Command line
set inputbar-bg "#32302f"
set inputbar-fg "#ebdbb2"

# Status bar
set statusbar-bg "#32302f"
set statusbar-fg "#ebdbb2"
set statusbar-v-padding 4
set statusbar-home-tilde true

# Completion
set completion-bg "#32302f"
set completion-fg "#ebdbb2"
set completion-group-bg "#d79921"
set completion-group-fg "#282828"
set completion-highlight-bg "#d79921"
set completion-highlight-fg "#282828"

# Notifications
set notification-error-bg "#cc241d"
set notification-error-fg "#ebdbb2"
set notification-warning-bg "#d79921"
set notification-warning-fg "#282828"

# Search
set highlight-color "#d79921"
set highlight-active-color "#d65d0e"

# Index
set index-bg "#32302f"
set index-fg "#ebdbb2"
set index-active-bg "#d79921"
set index-active-fg "#282828"

# Zooming
set adjust-open "width"
set zoom-center true

# Clipboard
set selection-clipboard "clipboard"

# Navigate through pages with , and .
map , navigate previous
map . navigate next
