#!/usr/bin/env bash

FZF_STATE_PREFIX=/tmp/fzf
mkdir --parents $FZF_STATE_PREFIX

case $1 in
context)
    if [[ -z $2 ]]; then
        echo "Error: expected a number" >&2
        exit 1
    fi
    start=$(($2 - (FZF_PREVIEW_LINES / 2)))
    echo $((start > 1 ? start : 0))
    exit
    ;;
get-source)
    if [[ -f $FZF_STATE_PREFIX/hide-hidden-files ]]; then
        unset hidden
    else
        hidden="--hidden"
    fi
    if [[ -f $FZF_STATE_PREFIX/show-ignored-files ]]; then
        ignored="--no-ignore"
    else
        unset ignored
    fi

    case $2 in
    files)
        eval fd $hidden $ignored --follow --type=file
        ;;
    directories)
        eval fd $hidden $ignored --follow --type=directory
        ;;
    grep)
        eval rg --line-number --no-heading --color=always $hidden $ignored --follow "\"$3\""
        ;;
    *)
        echo "Error: unknown argument: $2" >&2
        exit 1
        ;;
    esac
    exit
    ;;
toggle)
    if [[ -z $2 ]]; then
        echo "Error: no attribute specified" >&2
        exit 1
    fi

    file="$FZF_STATE_PREFIX/$2"

    if [[ -f $file ]]; then
        rm "$file"
    else
        touch "$file"
    fi

    exit
    ;;
*)
    echo "Error: unknown argument: $1" >&2
    exit 1
    ;;
esac
