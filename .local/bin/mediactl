#!/usr/bin/env bash

case $1 in
play)
    playerctl play
    ;;
pause)
    playerctl pause
    ;;
play-pause)
    playerctl play-pause
    ;;
stop)
    playerctl stop
    ;;
next)
    playerctl next
    ;;
previous)
    playerctl previous
    ;;
speakers-raise)
    pactl set-sink-mute @DEFAULT_SINK@ 0
    pactl set-sink-volume @DEFAULT_SINK@ +5%
    ;;
speakers-lower)
    pactl set-sink-mute @DEFAULT_SINK@ 0
    pactl set-sink-volume @DEFAULT_SINK@ -5%
    ;;
speakers-mute)
    pactl set-sink-mute @DEFAULT_SINK@ toggle
    ;;
microphone-raise)
    pactl set-source-volume @DEFAULT_SOURCE@ +5%
    ;;
microphone-lower)
    pactl set-source-volume @DEFAULT_SOURCE@ -5%
    ;;
microphone-mute)
    pactl set-source-mute @DEFAULT_SOURCE@ toogle
    ;;
*)
    echo "Error: unknown argument: $1" >&2
    exit 1
    ;;
esac
