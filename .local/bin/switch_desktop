#!/usr/bin/bash

# Handles diagonal desktop switching.  It takes the direction as an argument.
# Whether and how the desktop is switched, depends then on the current desktop

workspace=$(xdotool get_desktop)

case $1 in
	upleft)
        if [[ $workspace = 0 ]]; then
            xdotool set_desktop 3
        fi ;;
	upright)
        if [[ $workspace = 1 ]]; then
            xdotool set_desktop 2
        fi ;;
	downleft)
        if [[ $workspace = 2 ]]; then
            xdotool set_desktop 1
        fi ;;
	downright)
        if [[ $workspace = 3 ]]; then
            xdotool set_desktop 0
        fi ;;
esac
