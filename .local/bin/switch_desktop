#!/usr/bin/env bash

# Handles diagonal desktop switching.  It takes the direction as an argument.
# Whether and how the desktop is switched, depends then on the current desktop

workspace="$(xdotool get_desktop)"

case $1 in
upleft)
    [[ $workspace == 0 ]] && xdotool set_desktop 3
    ;;
upright)
    [[ $workspace == 1 ]] && xdotool set_desktop 2
    ;;
downleft)
    [[ $workspace == 2 ]] && xdotool set_desktop 1
    ;;
downright)
    [[ $workspace == 3 ]] && xdotool set_desktop 0
    ;;
*)
    echo "Error: unknown direction: $1" >&2
    exit 1
    ;;
esac
